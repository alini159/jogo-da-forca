<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#745679"
    android:orientation="vertical"
    tools:context=".TelaMorreu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="4dp"
            android:paddingTop="15dp"
            android:scaleType="center"
            android:src="@drawable/gameover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/layout_customizado2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="1.0">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et2"
                android:layout_width="288dp"
                android:layout_height="130dp"
                android:background="@drawable/botao_customizado"
                android:clickable="false"
                android:enabled="false"
                android:text="A sua hora chegou camponês, voce não acertou a palavra e não foi
absolvido, Tome essas moedas, CARONTE aguarda sua presença, e HADES sua chegada!
"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNick"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botao_customizado"
                android:clickable="false"
                android:enabled="false"
                android:text="Jaz aqui "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et10"
                android:layout_width="288dp"
                android:layout_height="67dp"
                android:background="@drawable/botao_customizado"
                android:clickable="false"
                android:enabled="false"
                android:text="Descance em paz pobre camponês!!!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et3"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botao_customizado"
                android:backgroundTint="#C59DCB"
                android:clickable="false"
                android:enabled="false"
                android:text="Escolha uma Categoria"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNjogo"
                android:onClick="novoJogo"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/botao_customizado"
                android:text="Novo Jogo"
                android:textAllCaps="false"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/btnFruta"
                app:layout_constraintStart_toStartOf="@+id/btnFruta"
                app:layout_constraintTop_toBottomOf="@+id/btnFruta" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>