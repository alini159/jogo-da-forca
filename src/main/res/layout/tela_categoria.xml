<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#745679"
    android:orientation="vertical"
    tools:context=".TelaCategoria">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/avatar"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="208dp"
            android:background="@drawable/user1"
            android:foregroundTint="#000000"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/etNomeAvatar"
            app:layout_constraintEnd_toEndOf="@+id/etNomeAvatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etNomeAvatar"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:background="@drawable/botao_customizado"
            android:backgroundTint="#E5E5E5"
            android:clickable="false"
            android:enabled="false"
            android:text="Escolha o Seu Avatar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_customizado"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et2"
            android:layout_width="288dp"
            android:layout_height="90dp"
            android:background="@drawable/botao_customizado"
            android:clickable="false"
            android:enabled="false"
            android:text="A hora do pesadelo chegou,
             voce tem apenas 6 vidas,
             cuidado para nao morrer enforcado!!!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et3"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botao_customizado"
            android:backgroundTint="#C59DCB"
            android:clickable="false"
            android:enabled="false"
            android:text="Escolha uma Categoria"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-41dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAnimal"
            android:onClick="clickAnimal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/botao_customizado"
            android:text="Animal"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnDisciplina"
            app:layout_constraintStart_toStartOf="@+id/btnDisciplina"
            app:layout_constraintTop_toBottomOf="@+id/btnDisciplina" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTeste"
            android:onClick="clickPais"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/botao_customizado"
            android:text="Pais"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnFruta"
            app:layout_constraintStart_toStartOf="@+id/btnFruta"
            app:layout_constraintTop_toBottomOf="@+id/btnFruta" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFruta"
            android:onClick="clickFruta"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/botao_customizado"
            android:text="Fruta"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnAnimal"
            app:layout_constraintStart_toStartOf="@+id/btnAnimal"
            app:layout_constraintTop_toBottomOf="@+id/btnAnimal" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDisciplina"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/botao_customizado"
            android:onClick="clickDisciplina"
            android:text="Disciplina"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>